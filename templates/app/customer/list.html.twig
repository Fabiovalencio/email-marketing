{% extends '@layout/default.html.twig' %}

{% block title %}{{ block('page_header') }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="box">
            <div class="box-body">
                <a href="{{ url('customer.create') }}" class="btn btn-app">
                    <i class="fa fa-plus"></i> Novo
                </a>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>#</th>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Editar</th>
                            <th>Excluir</th>
                        </tr>
                        {% for customer in customers %}
                            <tr>
                                <th>{{ customer.id }}</th>
                                <th>{{ customer.name }}</th>
                                <th>{{ customer.email }}</th>
                                <th><a href="{{ url('customer.update', {id: customer.id}) }}"><i class="fa fa-pencil"></i></a></th>
                                <th><a onclick="excluir('{{ url('customer.delete', {id: customer.id}) }}')"><i class="fa fa-trash"></i></a></th>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}

{% block page_header %}
    Lista de contatos
{% endblock %}

{% block javascript %}

    <script type="application/javascript">
        function excluir(url) {
            var q = confirm("Confirma a exclus√£o do contato?");
            if (q == true) {
                window.location = url;
            }
        }

    </script>

{% endblock %}
