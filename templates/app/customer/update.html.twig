{% extends '@layout/default.html.twig' %}

{% block title %}{{ block('page_header') }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <form name="form" role="form" method="post" action="{{ url('customer.update', {id: customer.id}) }}">
                    <input type="hidden" name="_method" value="PUT"/>
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name">Nome:</label>
                            <input type="text" class="form-control" name="name" value="{{ customer.name }}" />
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail:</label>
                            <input type="email" class="form-control" name="email" required="required" value="{{ customer.email }}"/>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button class="btn btn-primary" type="submit">Editar</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

{% endblock %}

{% block page_header %}
    Edição de contato - {{ customer.name }}
{% endblock %}
