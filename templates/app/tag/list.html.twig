{% extends '@layout/default.html.twig' %}

{% block title %}{{ block('page_header') }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="box">
            <div class="box-body">
                <a href="{{ url('tag.create') }}" class="btn btn-app">
                    <i class="fa fa-plus"></i> Novo
                </a>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>#</th>
                            <th>Nome</th>
                            <th>Editar</th>
                            <th>Excluir</th>
                        </tr>
                        {% for tag in tags %}
                            <tr>
                                <th>{{ tag.id }}</th>
                                <th>{{ tag.name }}</th>
                                <th><a href="{{ url('tag.update', {id: tag.id}) }}"><i class="fa fa-pencil"></i></a></th>
                                <th><a onclick="excluir('{{ url('tag.delete', {id: tag.id}) }}')"><i class="fa fa-trash"></i></a></th>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}

{% block page_header %}
    Lista de tags
{% endblock %}

{% block javascript %}

    <script type="application/javascript">

        function excluir(url) {
            var q = confirm("Confirma a exclus√£o da tag?");
            if (q == true) {
                $.ajax({
                    method: "DELETE",
                    url: url
                })
                    .done(function( msg ) {
                        location.reload();
                    })
                    .fail(function(e) {
                        alert(e);
                    });
            }
        }

    </script>

{% endblock %}
