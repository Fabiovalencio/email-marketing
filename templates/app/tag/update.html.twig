{% extends '@layout/default.html.twig' %}

{% block title %}{{ block('page_header') }}{% endblock %}

{% block content %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class', 'btn btn-primary').setLabel('Editar') %}
    {% do form.setAttribute('action', url('tag.update', {id: form.getObject().id}) ) %}
    {% do form.prepare() %}

    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                {{ form().openTag(form) | raw }}
                    {{ formHidden(form.get('_method')) }}
                    {% include '@app/tag/_form.html.twig' %}
                {{ form().closeTag() | raw }}
            </div>
        </div>
    </div>

{% endblock %}

{% block page_header %}
    Edição de tag - {{ form.getObject().name }}
{% endblock %}